<openerp>
	<data>
        <record id="view_mail_message_tree_report" model="ir.ui.view">
            <field name="name">Employee Logs</field>
            <field name="model">mail.message</field>
            <field eval="100" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Employee Logs" create="false">
                    <field name="journal_id" options='{"no_open":True}' invisible="context.get('journal_id',False)"/>
                    <field name="period_id" options='{"no_open":True}' invisible="context.get('period_id',False)"/>
                </tree>
            </field>
        </record>
	</data>
</openerp>